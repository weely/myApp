<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/content_frame"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:background="#4d9694dc">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:weightSum="1"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btn_reback"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:background="@color/bg_transparent"
                android:src="@drawable/reback_selector"/>
            <TextView
                android:id="@+id/tv_song_name"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:textColor="@color/colorTxt1"
                android:text="歌曲名"/>
            <ImageButton
                android:id="@+id/btn_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:background="@color/bg_transparent"
                android:src="@drawable/item_selector"/>
        </LinearLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_music"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:weightSum="1"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/btn_play_type"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:background="@color/bg_transparent"
                android:src="@mipmap/icon_playing_mode_normal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:layout_weight="0.65"
                android:weightSum="1"
                android:orientation="horizontal" >
                <ImageButton
                    android:id="@+id/btn_previous"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:background="@color/bg_transparent"
                    android:src="@drawable/play_previous_selector"/>
                <ImageButton
                    android:id="@+id/btn_play"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@color/bg_transparent"
                    android:src="@drawable/play_selector"/>
                <ImageButton
                    android:id="@+id/btn_next"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:background="@color/bg_transparent"
                    android:src="@drawable/play_next_selector"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:weightSum="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_current_time"
                    android:gravity="center|left"
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:textColor="@color/colorTxt1"
                    android:maxLines="1"
                    android:text="00:00"/>
                <SeekBar
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:id="@+id/sbar_music"/>
                <TextView
                    android:id="@+id/tv_res_time"
                    android:gravity="center|right"
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:textColor="@color/colorTxt1"
                    android:maxLines="1"
                    android:text="00:00"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ddc6c6fc"
        android:orientation="horizontal">

    </LinearLayout>

    <ListView
        android:id="@+id/musicListView"
        android:orientation="vertical"
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:divider="@android:color/transparent"
        android:dividerHeight="1dp"/>

</android.support.v4.widget.DrawerLayout>